<Window x:Class="WPFApp.Windows.VersusTeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp.Windows"
        mc:Ignorable="d"
        Title="VersusTeamWindow" Height="300" Width="500" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="cbTeams" HorizontalAlignment="Center" Width="250" FontSize="16" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lbVersusTeamTitle" Content="Choose versus team:" HorizontalAlignment="Center" Margin="0,57,0,204" Width="168" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" />
            <Button x:Name="btnSave" HorizontalAlignment="Center" Width="150" Height="30" Margin="0,215,0,35" Content="Save" Click="btnSave_Click"/>

        </Grid>
    </Border>
</Window>
